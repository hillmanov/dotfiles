{
  "diagnostic.errorSign": "âœ˜",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "?",
  "diagnostic.checkCurrentLine": true,

  "coc.preferences.hoverTarget": "float",

  "tsserver.implicitProjectConfig.experimentalDecorators": true,
  "javascript.suggest.enabled": true,
  "javascript.suggestionActions.enabled": false,
  "tsserver.implicitProjectConfig.checkJs": false,
  "snippets.ultisnips.directories": ["~/.config/coc/ultisnips"],
  "suggest.noselect": true,
  "suggest.removeDuplicateItems": true,
  "yank.highlight.duration": 1000,
  "snippets.extends": {
    "javascriptreact": ["javascript"]
  },
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true,
        "completeUnimported": true
      }
    }
  },
  "go.goplsOptions": {
    "staticcheck": true
  }
}
